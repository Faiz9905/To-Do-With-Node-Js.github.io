<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://kit.fontawesome.com/0f1acd555e.js" crossorigin="anonymous"></script>
    <title>welcome</title>
    <link rel="stylesheet" href="/css/home.css">
</head>
<body>
    
    <div id="container">
        <div class="to-do-app">
           <div class="to-do-app-header">
               <h2>To Do Application</h2>
           </div>
           <div class="details-to-do">
               <form action="/create-to-do-list" method="POST" class="form-inner">


                     <div class="discription-div">
                        <div class="label-category">
                            <span>DESCRIPTION</span>
                        </div>
                        <div class="input-category">
                            <input type="text" name="discription"  class="discription-div-input" placeholder="Type here...." required>
                        </div>
                        
                     </div>


                     <div class="cat-due-date">
                         
                         <div class="select">
                             <div class="select-label">
                                  <span>CATEGORY</span>
                             </div>
                             <div class="select-input">
                                <select id="cars"  name="category">
                                    <option value="" disabled selected>Choose a category</option>
                                    <option value="Personal">Personal</option>
                                    <option value="Work">Work</option>
                                    <option value="Family">Family</option>
                                    <option value="Friends">Friends</option>
                                  </select>
                             </div>
                           
                         </div>
                         <div class="due-date">
                             <input type="date" name="date" class = "due-date-input" required>
                         </div>
                       
                     </div>
                     <div class="buttons-div">
                          <button type="submit" class="add">Add To Task</button>
                          <!-- <button type="submit" class="delete">Delete</button> -->
                     </div>
               </form>
           </div>
           <div class="to-do-result">
              <ul class="to-do-ul">
                  <% for(let i of list_to_do) {%>
                  <li class="to-do-li">
                      <div class="first">
                           
                          <a href="/update-to-do-list/?id=<%= i._id %>">
                            <% if(i.isDone == true) {%>
                                <i class="far fa-check-square i-custom"></i>
                            <%} else {%>
                                <i class="far fa-times-circle i-custom"></i>
                                
                            <%}%>
                           
                           
                          </a>


                          
                      </div>
                      <div class="second">
                        <% if(i.isDone == true) {%>
                           <del> <p class="dis"> <%= i.discription %></p></del>
                          <%} else {%>
                           <p class="dis"> <%= i.discription %></p>
                            <%}%>  
                          <i class="far fa-calendar-alt i-custom i-cal"></i><span class="date"><%= i.duedate %></span>
                      </div>
                      <div class="third">
                          <div class="third-inner">
                           
                               
                               
                                    <span class="personal"><%= i.category %></span>
                                    
                              <!-- <span class="personal"><%= i.category %></span> -->
                          </div>
                          
                            <div class="third-inner-upper">
                               <a href="/delete-to-do/?id=<%= i._id %>" class="dlt"> <span class="personal-upper">Delete</span></a> 
                            </div>
                          
                          
                      </div>
                  </li>
                  <%} %>
                
              </ul>
           </div>
        </div>
    </div>
    <script src="/js/home.js"></script>
</body>
</html>